{
  "version": 2,
  "buildCommand": "cd frontend && rm -rf node_modules package-lock.json && npm install --no-optional && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install --no-optional",
  "framework": "vite",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|webp|json))",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
} 